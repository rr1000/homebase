<header class="main-header">
    <div class="grid">
        <a href="/" class="logo"></a>
        <div class="menu"><i class="fa fa-bars"></i></div>
        <% if user_signed_in? %>
        <div class="header-actions">
            <%= link_to current_user.email, edit_user_registration_path, class: "username" %>
            <%= link_to "Log out", logout_path, class: "action" %>
        </div>
        <% else %>
        <div class="header-actions">
            <%= link_to "Sign in", sign_in_path, class: "action" %>
        </div>
        <% end %>
    </div>
</header>
